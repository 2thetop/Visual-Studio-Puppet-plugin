<Window x:Class="MicrosoftOpenTech.PuppetProject.UploadProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Upload Progress Window" Height="232" Width="590" Topmost="True" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Margin="10" Height="182" VerticalAlignment="Top">
        <ProgressBar x:Name="progressBar" Margin="10,83,10,0" VerticalAlignment="Top" IsIndeterminate="True" Height="15" Width="540"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" IsCancel="True" Click="btnCancel_Click"/>
        <Label x:Name="lblStatus" Content="Uploading..." Margin="10,10,10,131" RenderTransformOrigin="-0.658,0.231" Height="51"/>

    </Grid>
</Window>
